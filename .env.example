# Kupuri Studios - Environment Variables Template
# Copy this file to .env and fill in your values

# ===== LITELLM CONFIGURATION (Required) =====
LITELLM_MASTER_KEY=sk-kupuri-prod-change-this-key
LITELLM_PROXY_URL=http://litellm:4000

# ===== API KEYS (At least one required) =====

# Google Gemini (FREE TIER - Recommended default)
# Get key: https://makersuite.google.com/app/apikey
# Free: 1500 requests/day, 1M tokens/day
GOOGLE_API_KEY=

# OpenAI (Optional - for premium features)
OPENAI_API_KEY=

# Anthropic Claude (Optional - for advanced reasoning)
ANTHROPIC_API_KEY=

# Zhipu AI / GLM (Optional - for Chinese market + vision)
ZHIPU_API_KEY=

# OpenRouter (Optional - access to 100+ models)
OPENROUTER_API_KEY=

# ===== DEPLOYMENT SETTINGS =====

# Server configuration
HOST=0.0.0.0
PORT=8000
NODE_ENV=production

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Disable heavy features for VPS (true/false)
DISABLE_COMFYUI=true

# ===== WHITE LABEL CUSTOMIZATION =====

# Brand name (replaces "Kupuri Studios")
VITE_BRAND_NAME=Kupuri Studios

# Logo URL (optional)
VITE_LOGO_URL=

# Primary color (hex code)
VITE_PRIMARY_COLOR=#6366f1

# ===== OPTIONAL INTEGRATIONS =====

# Stripe (for payments)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=

# PostHog (analytics)
VITE_PUBLIC_POSTHOG_KEY=

# ===== DATABASE =====

# LiteLLM database (auto-created if SQLite)
DATABASE_URL=sqlite:////app/litellm.db

# ===== RAILWAY/COOLIFY SPECIFIC =====

# Railway project ID (auto-set by Railway)
RAILWAY_PROJECT_ID=

# Coolify deployment token
COOLIFY_API_TOKEN=
COOLIFY_DOMAIN=
